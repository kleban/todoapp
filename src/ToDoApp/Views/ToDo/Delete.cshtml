@model ToDoApp.Models.ToDoItem

@{
    ViewData["Title"] = "Чи справді Ви хочете видалити цю задачу?";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<hr />

@if(!Model.IsComplete) {
    <div class="alert alert-danger">Ви можете видалити незавершену задачу!!!</div>
}

<div>
    <h4>Опис задачі</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsComplete)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsComplete)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CompleteDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompleteDate)
        </dd>
    </dl>
    
    <form method="post" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a class="btn btn-outline-dark" asp-action="Index">До списку</a>
    </form>
</div>
